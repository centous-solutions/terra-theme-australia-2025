{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-slider-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-slider-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-slider-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .ai-blog-slider-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-blog-slider-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-blog-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-blog-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 10px;
  }

  .ai-blog-slider-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-blog-slider-card-{{ ai_gen_id }} {
    flex: 0 0 calc(100% - {{ block.settings.card_gap }}px);
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    display: flex;
    flex-direction: column;
  }

  .ai-blog-slider-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-blog-slider-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 66.67%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-slider-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-slider-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-blog-slider-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-slider-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-blog-slider-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 13px;
    color: {{ block.settings.meta_color }};
  }

  .ai-blog-slider-date-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-slider-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-blog-slider-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_excerpt_size }}px;
    color: {{ block.settings.card_excerpt_color }};
    line-height: 1.6;
    margin: 0 0 16px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }

  .ai-blog-slider-read-more-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    color: {{ block.settings.read_more_color }};
    font-weight: 500;
    text-decoration: none;
    margin-top: auto;
  }

  .ai-blog-slider-read-more-{{ ai_gen_id }}:hover {
    color: {{ block.settings.read_more_hover_color }};
  }

  .ai-blog-slider-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 30px;
  }

  .ai-blog-slider-nav-button-{{ ai_gen_id }} {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_background }};
    border: 1px solid {{ block.settings.nav_button_border }};
    color: {{ block.settings.nav_button_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-blog-slider-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_background }};
    color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-blog-slider-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-blog-slider-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  .ai-blog-slider-empty-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  @media screen and (min-width: 750px) {
    .ai-blog-slider-card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.card_gap }}px * ({{ block.settings.cards_desktop }} - 1))) / {{ block.settings.cards_desktop }});
    }

    .ai-blog-slider-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 1.2);
    }

    .ai-blog-slider-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 1.1);
    }
  }
{% endstyle %}

<blog-slider-{{ ai_gen_id }} class="ai-blog-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-slider-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-blog-slider-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-slider-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-blog-slider-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blog != blank %}
      <div class="ai-blog-slider-wrapper-{{ ai_gen_id }}">
        <div class="ai-blog-slider-track-{{ ai_gen_id }}" data-slider-track>
          {% for article in block.settings.blog.articles limit: block.settings.articles_limit %}
            <a href="{{ article.url }}" class="ai-blog-slider-card-{{ ai_gen_id }}">
              <div class="ai-blog-slider-image-wrapper-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 600 }}"
                    alt="{{ article.image.alt | escape }}"
                    class="ai-blog-slider-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="400"
                  >
                {% else %}
                  <div class="ai-blog-slider-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-blog-slider-content-{{ ai_gen_id }}">
                {% if block.settings.show_date or block.settings.show_author %}
                  <div class="ai-blog-slider-meta-{{ ai_gen_id }}">
                    {% if block.settings.show_date %}
                      <span class="ai-blog-slider-date-{{ ai_gen_id }}">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="16" y1="2" x2="16" y2="6"></line>
                          <line x1="8" y1="2" x2="8" y2="6"></line>
                          <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        {{ article.published_at | date: '%b %d, %Y' }}
                      </span>
                    {% endif %}
                    {% if block.settings.show_author and article.author != blank %}
                      <span class="ai-blog-slider-author-{{ ai_gen_id }}">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                          <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        {{ article.author }}
                      </span>
                    {% endif %}
                  </div>
                {% endif %}

                <h3 class="ai-blog-slider-title-{{ ai_gen_id }}">{{ article.title }}</h3>

                {% if block.settings.show_excerpt and article.excerpt != blank %}
                  <div class="ai-blog-slider-excerpt-{{ ai_gen_id }}">
                    {{ article.excerpt | strip_html | truncate: 120 }}
                  </div>
                {% endif %}

                {% if block.settings.show_read_more %}
                  <span class="ai-blog-slider-read-more-{{ ai_gen_id }}">
                    {{ block.settings.read_more_text }}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  </span>
                {% endif %}
              </div>
            </a>
          {% endfor %}
        </div>

        {% if block.settings.show_navigation %}
          <div class="ai-blog-slider-nav-{{ ai_gen_id }}">
            <button class="ai-blog-slider-nav-button-{{ ai_gen_id }}" data-prev aria-label="Previous">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
            </button>
            <button class="ai-blog-slider-nav-button-{{ ai_gen_id }}" data-next aria-label="Next">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-blog-slider-empty-{{ ai_gen_id }}">
        {{ 'blog-apparel-1' | placeholder_svg_tag }}
        <p>Select a blog to display related articles</p>
      </div>
    {% endif %}
  </div>
</blog-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class BlogSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-slider-track]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.cards = this.querySelectorAll('.ai-blog-slider-card-{{ ai_gen_id }}');
      }

      connectedCallback() {
        if (!this.track || this.cards.length === 0) return;

        this.setupNavigation();
        this.updateButtonStates();

        this.track.addEventListener('scroll', () => {
          this.updateButtonStates();
        });
      }

      setupNavigation() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.scroll('prev'));
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.scroll('next'));
        }
      }

      scroll(direction) {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap) || 0;
        const scrollAmount = cardWidth + gap;

        if (direction === 'prev') {
          this.track.scrollLeft -= scrollAmount;
        } else {
          this.track.scrollLeft += scrollAmount;
        }
      }

      updateButtonStates() {
        if (!this.prevButton || !this.nextButton) return;

        const isAtStart = this.track.scrollLeft <= 0;
        const isAtEnd = this.track.scrollLeft + this.track.offsetWidth >= this.track.scrollWidth - 1;

        this.prevButton.disabled = isAtStart;
        this.nextButton.disabled = isAtEnd;
      }
    }

    customElements.define('blog-slider-{{ ai_gen_id }}', BlogSlider{{ ai_gen_id }});
  })();
</script>

