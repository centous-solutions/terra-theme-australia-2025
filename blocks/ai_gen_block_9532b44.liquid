{% doc %}
  @prompt
    I want a related-blog slider that automatically shows related blog posts according to the current blog.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-related-blog-slider-{{ ai_gen_id }} {
    {% comment %} padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px; {% endcomment %}
    background-color: {{ block.settings.background_color }};
  }

  .ai-related-blog-slider__container-{{ ai_gen_id }} {
    padding-left: calc(var(--gap, 8px) * 3);
    padding-right: calc(var(--gap, 8px) * 3);
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-related-blog-slider__header-{{ ai_gen_id }} {
    margin-bottom: 40px;
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-related-blog-slider__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-related-blog-slider__wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-related-blog-slider__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_spacing }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .ai-related-blog-slider__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-related-blog-slider__card-{{ ai_gen_id }} {
    flex: 0 0 calc({{ block.settings.cards_per_row_desktop }}% - {{ block.settings.card_spacing }}px);
    min-width: 280px;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .ai-related-blog-slider__card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-related-blog-slider__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 66.67%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-related-blog-slider__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-related-blog-slider__image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-related-blog-slider__content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-related-blog-slider__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 13px;
    color: {{ block.settings.meta_color }};
  }

  .ai-related-blog-slider__date-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-related-blog-slider__author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-related-blog-slider__card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px;
    line-height: 1.4;
  }

  .ai-related-blog-slider__card-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-related-blog-slider__card-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-related-blog-slider__excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.excerpt_color }};
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .ai-related-blog-slider__read-more-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-weight: 500;
  }

  .ai-related-blog-slider__read-more-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-related-blog-slider__nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
  }

  .ai-related-blog-slider__nav-button-{{ ai_gen_id }} {
    {% comment %} width: 44px; {% endcomment %}
    height: 42px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    border: 1px solid {{ block.settings.nav_button_border }};
    color: {{ block.settings.nav_button_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    padding-left: 12px;
    padding-right: 10px;
  }

  .ai-related-blog-slider__nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg }};
    color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-related-blog-slider__nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-related-blog-slider__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-related-blog-slider__card-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - {{ block.settings.card_spacing }}px);
    }

    .ai-related-blog-slider__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-related-blog-slider__card-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - {{ block.settings.card_spacing }}px);
    }
  }
{% endstyle %}

<related-blog-slider-{{ ai_gen_id }} class="ai-related-blog-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-related-blog-slider__container-{{ ai_gen_id }}" style="padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;">
    {% if block.settings.heading != blank %}
      <div class="ai-related-blog-slider__header-{{ ai_gen_id }}">
        <h2 class="ai-related-blog-slider__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% assign current_blog = blog %}
    {% assign article_count = 0 %}

    {% if current_blog %}
      {% for article in current_blog.articles %}
        {% if article.id != current_blog.articles.first.id %}
          {% assign article_count = article_count | plus: 1 %}
        {% endif %}
      {% endfor %}

      {% if article_count > 0 %}
        <div class="wt-product__wrapper ai-related-blog-slider__wrapper-{{ ai_gen_id }}">
          <div class="ai-related-blog-slider__track-{{ ai_gen_id }}" data-slider-track>
            {% for article in current_blog.articles %}
              {% if article.id != current_blog.articles.first.id and forloop.index <= block.settings.articles_limit %}
                <div class="ai-related-blog-slider__card-{{ ai_gen_id }}">
                  <div class="ai-related-blog-slider__image-wrapper-{{ ai_gen_id }}">
                    {% if article.image %}
                      <img
                        src="{{ article.image | image_url: width: 600 }}"
                        alt="{{ article.image.alt | escape }}"
                        class="ai-related-blog-slider__image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="600"
                        height="400"
                      >
                    {% else %}
                      {{ 'image' | placeholder_svg_tag }}
                    {% endif %}
                  </div>

                  <div class="ai-related-blog-slider__content-{{ ai_gen_id }}">
                    {% if block.settings.show_meta %}
                      <div class="ai-related-blog-slider__meta-{{ ai_gen_id }}">
                        <span class="ai-related-blog-slider__date-{{ ai_gen_id }}">
                          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                          </svg>
                          {{ article.published_at | date: '%b %d, %Y' }}
                        </span>
                        {% if article.author != blank %}
                          <span class="ai-related-blog-slider__author-{{ ai_gen_id }}">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                              <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            {{ article.author }}
                          </span>
                        {% endif %}
                      </div>
                    {% endif %}

                    <h3 class="ai-related-blog-slider__card-title-{{ ai_gen_id }}">
                      <a href="{{ article.url }}">{{ article.title }}</a>
                    </h3>

                    {% if block.settings.show_excerpt and article.excerpt != blank %}
                      <div class="ai-related-blog-slider__excerpt-{{ ai_gen_id }}">
                        {{ article.excerpt | strip_html | truncate: 120 }}
                      </div>
                    {% endif %}

                    <a href="{{ article.url }}" class="ai-related-blog-slider__read-more-{{ ai_gen_id }}">
                      {{ block.settings.read_more_text }}
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                      </svg>
                    </a>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>

          {% if block.settings.show_navigation %}
            <div class="ai-related-blog-slider__nav-{{ ai_gen_id }}">
              <button
                class="ai-related-blog-slider__nav-button-{{ ai_gen_id }}"
                data-slider-prev
                aria-label="Previous slide"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
              <button
                class="ai-related-blog-slider__nav-button-{{ ai_gen_id }}"
                data-slider-next
                aria-label="Next slide"
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            </div>
          {% endif %}
        </div>
      {% else %}
        <div class="ai-related-blog-slider__empty-{{ ai_gen_id }}">
          No related articles found in this blog.
        </div>
      {% endif %}
    {% else %}
      <div class="ai-related-blog-slider__empty-{{ ai_gen_id }}">
        This block works on blog pages. Please add it to a blog template.
      </div>
    {% endif %}
  </div>
</related-blog-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class RelatedBlogSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-slider-track]');
        this.prevButton = this.querySelector('[data-slider-prev]');
        this.nextButton = this.querySelector('[data-slider-next]');
        this.cardSpacing = {{ block.settings.card_spacing }};
      }

      connectedCallback() {
        if (!this.track) return;

        this.setupNavigation();
        this.updateButtonStates();

        this.track.addEventListener('scroll', () => {
          this.updateButtonStates();
        });
      }

      setupNavigation() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.scrollPrev());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.scrollNext());
        }
      }

      scrollPrev() {
        const scrollAmount = this.getScrollAmount();
        this.track.scrollBy({
          left: -scrollAmount,
          behavior: 'smooth'
        });
      }

      scrollNext() {
        const scrollAmount = this.getScrollAmount();
        this.track.scrollBy({
          left: scrollAmount,
          behavior: 'smooth'
        });
      }

      getScrollAmount() {
        const card = this.track.querySelector('.ai-related-blog-slider__card-{{ ai_gen_id }}');
        if (!card) return 0;
        return card.offsetWidth + this.cardSpacing;
      }

      updateButtonStates() {
        if (!this.prevButton || !this.nextButton) return;

        const isAtStart = this.track.scrollLeft <= 0;
        const isAtEnd = this.track.scrollLeft + this.track.clientWidth >= this.track.scrollWidth - 1;

        this.prevButton.disabled = isAtStart;
        this.nextButton.disabled = isAtEnd;
      }
    }

    customElements.define('related-blog-slider-{{ ai_gen_id }}', RelatedBlogSlider{{ ai_gen_id }});
  })();
</script>

