{% doc %}
  @prompt
    Create a storytelling section titled FROM SKETCH TO SUBSTANCE. The layout should alternate between text and images in a modern, editorial style. Use multiple text blocks with short paragraphs and pull quotes describing design, packaging, printing, and material innovation. Arrange images side-by-side with text for a creative, documentary feel — like a behind-the-scenes design process. Keep the tone premium, thoughtful, and minimalist.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-storytelling-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_mobile }}px 20px;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_desktop }}px 40px;
    }
  }

  .ai-storytelling-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-storytelling-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size_mobile }}px;
    color: {{ block.settings.title_color }};
    text-align: {{ block.settings.title_alignment }};
    margin: 0 0 {{ block.settings.title_spacing_mobile }}px;
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    font-weight: 700;
    line-height: 1.1;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
      margin-bottom: {{ block.settings.title_spacing_desktop }}px;
    }
  }

  .ai-storytelling-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap_desktop }}px;
    }
  }

  .ai-storytelling-row-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap_mobile }}px;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      gap: {{ block.settings.grid_gap_desktop }}px;
    }

    .ai-storytelling-row-{{ ai_gen_id }}.ai-storytelling-reverse-{{ ai_gen_id }} {
      direction: rtl;
    }

    .ai-storytelling-row-{{ ai_gen_id }}.ai-storytelling-reverse-{{ ai_gen_id }} > * {
      direction: ltr;
    }
  }

  .ai-storytelling-text-block-{{ ai_gen_id }} {
    padding: {{ block.settings.text_padding_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-text-block-{{ ai_gen_id }} {
      padding: {{ block.settings.text_padding_desktop }}px;
    }
  }

  .ai-storytelling-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    text-transform: uppercase;
    letter-spacing: {{ block.settings.label_letter_spacing }}px;
    margin: 0 0 {{ block.settings.label_spacing }}px;
    font-weight: 500;
    display: block;
  }

  .ai-storytelling-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_mobile }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 600;
    line-height: 1.3;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }
  }

  .ai-storytelling-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size_mobile }}px;
    color: {{ block.settings.text_color }};
    line-height: {{ block.settings.text_line_height }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
  }

  .ai-storytelling-text-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_desktop }}px;
    }
  }

  .ai-storytelling-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size_mobile }}px;
    color: {{ block.settings.quote_color }};
    font-style: italic;
    line-height: 1.5;
    margin: {{ block.settings.quote_spacing }}px 0;
    padding-left: {{ block.settings.quote_indent }}px;
    border-left: {{ block.settings.quote_border_width }}px solid {{ block.settings.quote_border_color }};
    font-weight: 400;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-quote-{{ ai_gen_id }} {
      font-size: {{ block.settings.quote_size_desktop }}px;
    }
  }

  .ai-storytelling-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-storytelling-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-storytelling-image-placeholder-{{ ai_gen_id }} {
    background-color: {{ block.settings.placeholder_bg_color }};
    width: 100%;
    aspect-ratio: 4 / 3;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-storytelling-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-storytelling-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 13px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    text-align: center;
    pointer-events: none;
  }

  .ai-storytelling-dual-images-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-storytelling-dual-images-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap_desktop }}px;
    }
  }
{% endstyle %}

